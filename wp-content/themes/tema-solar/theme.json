{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        {
          "slug": "primary",
          "color": "#FEC910",
          "name": "Primary"
        },
        {
          "slug": "secondary",
          "color": "#F4F5F8",
          "name": "Secondary"
        },
        {
          "slug": "dark",
          "color": "#292B2E",
          "name": "Dark"
        },
        {
          "slug": "light",
          "color": "#FFFFFF",
          "name": "Light"
        },
        {
          "slug": "success",
          "color": "#28A745",
          "name": "Success"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Roboto, sans-serif",
          "slug": "roboto",
          "name": "Roboto"
        },
        {
          "fontFamily": "Montserrat, sans-serif",
          "slug": "montserrat",
          "name": "Montserrat"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "14px",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "16px",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "22px",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "36px",
          "name": "Extra Large"
        }
      ]
    },
    "layout": {
      "contentSize": "1140px",
      "wideSize": "1320px"
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--light)",
      "text": "var(--wp--preset--color--dark)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--montserrat)",
      "fontSize": "var(--wp--preset--font-size--medium)"
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
}
